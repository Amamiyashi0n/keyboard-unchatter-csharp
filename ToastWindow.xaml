<Window x:Class="keyboard_unchatter_csharp.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Topmost="True"
        Width="340"
        Height="92"
        FontFamily="Microsoft YaHei"
        Opacity="0">
    <Grid x:Name="Root">
        <Border x:Name="Card" Background="White" CornerRadius="12" Padding="14" SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="18" ShadowDepth="6" Opacity="0.18"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Width="10" Height="10" CornerRadius="5" Background="#FF6200EE" VerticalAlignment="Top" Margin="2,6,0,0"/>
                <StackPanel Grid.Column="2">
                    <TextBlock x:Name="AppNameText" Foreground="#FF757575" FontSize="11" TextTrimming="CharacterEllipsis"/>
                    <TextBlock x:Name="TitleText" Foreground="#FF212121" FontWeight="SemiBold" FontSize="13" Margin="0,2,0,0" TextTrimming="CharacterEllipsis"/>
                    <TextBlock x:Name="MessageText" Foreground="#FF616161" FontSize="12" Margin="0,4,0,0" TextWrapping="Wrap" MaxHeight="36"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid.RenderTransform>
            <TranslateTransform x:Name="SlideTransform" Y="18"/>
        </Grid.RenderTransform>
    </Grid>
</Window>
